{
    "name": "atellitech/ad-hub-php",
    "description": "It's library for managing and connecting various advertising APIs.",
    "keywords": ["php", "marketing", "GoogleAds", "Meta", "API"],
    "license": "MIT",
    "homepage":"https://github.com/AtelliTech/ad-hub-php",
    "authors": [
        {
            "name": "Eric Huang",
            "email": "eric.huang@atelli.ai"
        }
    ],
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "googleads/google-ads-php": "^28.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "AtelliTech\\Ads\\": "src/"
        }
    },
    "require-dev": {
        "vlucas/phpdotenv": "^5.5",
        "phpstan/phpstan": "^1.9",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "codetest": "php-cs-fixer --config=php_cs.php fix --verbose && phpstan"
    }
}
